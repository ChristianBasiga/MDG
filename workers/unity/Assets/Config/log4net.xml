<?xml version="1.0" encoding="utf-8"?>
<log4net>
    <appender name="UnityLogAppender" type="UnityLogAppender"> 
        <layout type="log4net.Layout.PatternLayout, log4net">
            <conversionPattern value="%d{ABSOLUTE} %-5p %c{1}:%L - %m%n"/>
        </layout>
    </appender>  
    <root>
        <level value="ERROR"/>
        <appender-ref ref="UnityLogAppender" /> 
        <level value="WARNING"/>
        <appender-ref ref="UnityLogAppender" />
        <level value="DEBUG"/>
        <appender-ref ref="UnityLogAppender" />
    </root>
</log4net>